{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:node/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": [
    "import",
    "node",
    "prettier"
  ],
  "root": true,
  "rules": {
    "node/no-unpublished-import": 0,
    "node/no-unpublished-require": 0,
    "prettier/prettier": 1
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx",
          ".json",
          ".mjs"
        ]
      }
    }
  }
}
